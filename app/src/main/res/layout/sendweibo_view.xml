<?xml version="1.0" encoding="utf-8"?>
<com.think_different.customviews.SendWeiboView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SendWeiboView">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/round_rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="start"
        android:padding="5dp"
        android:id="@+id/edit_weibo"
        android:hint="微博,记录美好生活"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edit_weibo"
        android:orientation="horizontal"
        android:id="@+id/bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt1"
            android:text="表情"/>
        <Button
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:id="@+id/bt2"
            android:text="图片"/>
        <Button
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:id="@+id/bt3"
            android:text="视频"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:id="@+id/send_button"
            android:text="发布"
            android:layout_marginRight="20dp"/>

    </LinearLayout>


</com.think_different.customviews.SendWeiboView>